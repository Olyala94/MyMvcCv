@using MyMvcCv.Models.Entity
@model List<Tbliletisim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-dark">
                                                @(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>

                                            <div class="timeline-item">
                                                <span class="time">
                                                    @item.Mail <a class="nav-link" href="/iletisim/iletisimSil/@item.ID" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                                        <i class="far fa-trash-alt"></i>Sil
                                                    </a>
                                                </span>


                                                <h3 class="timeline-header"><a href="#">@item.Adsoyad</a> @item.Konu</h3>

                                                <div class="timeline-body">
                                                    @item.Mesaj
                                                </div>

                                            </div>
                                        </div>
                                    }
                                    <div>
                                        <i class="far fa-clock bg-gray"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- /.container-fluid -->
    </section>
</body>
</html>
